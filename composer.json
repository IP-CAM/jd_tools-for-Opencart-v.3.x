{
	"name": "kotygor/jd_tools_main",
	"descripiton": "Мої інструменти. Головне меню і допоміжні засоби",
	"type": "opencart-extension",
	"extra": {
		"src-dir" : "upload",
		"mappings" : [
			"admin/language/uk-ua/tool/jd_tools.php",

			"admin/view/template/tool/jd_tools_main.twig",
			"admin/view/template/tool/jd_tools/snippets/button.twig",
			"admin/view/template/tool/jd_tools/snippets/input_field.twig",
			"admin/view/template/tool/jd_tools/snippets/progressbar.twig",
			"admin/view/template/tool/jd_tools/snippets/setting_form.twig",
			"admin/view/template/tool/jd_tools/snippets/tab.twig",

			"admin/view/stylesheet/jd_tools/main.css",

			"system/library/jd_tools/viewbuilder.php"
		],
		"installers" : {
			"php" : "install.php",
			"xml" : "install.xml"
		}
	},
	"require": {
		"kotygor/opencart-extension-installer": "*",
		"kotygor/opencart": "*"
	},
	"repositories": [
		{
			"type": "git",
			"url": "https://github.com/kotygor/opencart-extension-installer"
		},
		{
			"type": "git",
			"url": "https://github.com/kotygor/opencart"
		}
	]
}
